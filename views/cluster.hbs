<h1>Image Comparison</h1>

<style>
.comparison .artwork {
    display: inline-block;
    width: 300px;
}

.comparison img {
    max-width: 300px;
}

.comparison th {
    text-align: right;
}
</style>

{{#if cluster.processed}}
    <p><strong>Already processed.</p>
{{else}}
    <div class="process">
        <form action="/cluster/{{cluster._id}}" method="POST">
            <p><button type="submit">Mark as Processed</button></p>
        </form>
    </div>
{{/if}}

<div class="comparison">
    {{#each artworks}}
        <div class="artwork">
            {{#if url}}
                <a href="{{url}}" target="_blank">
                    <img src="{{thumbUrl}}"/>
                </a>
            {{else}}
                <img src="{{thumbUrl}}"/>
            {{/if}}
            <div class="caption">
                {{#if url}}
                    <a href="{{url}}">{{id}}</a>
                {{else}}
                    {{id}}
                {{/if}}
            </div>
            {{#if data}}
            <div class="data">
            <form action="/update-data" method="POST">
                <table>
                {{#each data}}
                    <tr>
                        <th><label for="{{@key}}">{{@key}}:</label></th>
                        <td><input type="text" name="{{@key}}" value="{{this}}"/></td>
                    </tr>
                {{/each}}
                </table>
                <input type="submit" value="Update Data"/>
            </form>
            {{/if}}
            </div>
        </div>
    {{/each}}
</div>