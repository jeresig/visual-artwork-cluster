<h1>Batch: {{job._id}} ({{job.imageCount}} images)</h1>

<p>Submitted {{job.date}}.</p>

{{#if job.processed}}
    <p class="job-processed">Entire batch has been processed.</p>
{{/if}}

<ul class="clusters">
{{#each clusters}}
    <li class="cluster">
        {{#each images}}
            <div class="image">
                <a href="/cluster/{{../_id}}" target="_blank">
                    <img src="/images/{{.}}.jpg"/>
                </a>
                <div class="caption">{{.}}</div>
            </div>
        {{/each}}
    </li>
{{/each}}
</ul>

{{#if processed}}
<h2>Processed Groups</h2>

<ul class="clusters">
{{#each processed}}
    <li class="cluster processed">
        {{#each images}}
            <div class="image">
                <img src="/images/{{.}}.jpg"/>
                <div class="caption">{{.}}</div>
            </div>
        {{/each}}
        <div class="process">
            <span class="processed">(Already processed.)</span>
        </div>
    </li>
{{/each}}
</ul>
{{/if}}